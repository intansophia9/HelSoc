<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sols">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="268dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="@string/psychologist"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:src="@drawable/social5" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/borders"
                android:gravity="center"
                android:text="Location:
1 Petaling Commerz and Residential Condos
Units 1 to 18, Level 1, Jalan 1C/149
Sungai Besi
Kuala Lumpur, 57100
Malaysia"
                android:textColor="#000000"
                android:textSize="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="About"
                android:textSize="15dp"
                android:textColor="#000000"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text=" - Develop understanding and experience the role of a socially responsible practitioner
- Improve ability to integrate theoretical psychological knowledge into practical application
Implementation of community psychology in a clinical setting
- Develop an understanding of the professional and ethical issues related to the practice of clinical psychology / counseling in clinical setting
- Increase knowledge and exposure of psychological disorders
- Improve organizational and communication skills"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/sign_psy"
                style="?android:textAppearanceSmall"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/darker_gray"
                android:textSize="35dp"
                android:text="@string/code_S05"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="456dp" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>