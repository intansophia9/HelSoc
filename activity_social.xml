<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/fbutton_color_sun_flower">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- SOLS Health -->
        <android.support.v7.widget.CardView

            android:id="@+id/solshealth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            app:cardElevation="10dp">


            <TextView
                android:layout_width="259dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:maxLines="1"
                android:text="Center Coordinator for SOLS Health"
                android:textColor="#000000"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:src="@drawable/social4" />

        </android.support.v7.widget.CardView>

        <!-- NGO Hub -->
        <android.support.v7.widget.CardView

        android:id="@+id/NGOHub"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp">

        <TextView
            android:layout_width="261dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:maxLines="1"
            android:text="Marketing Internship NGO Hub"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:src="@drawable/social1" />

    </android.support.v7.widget.CardView>

        <!-- City Launcher -->
        <android.support.v7.widget.CardView

            android:id="@+id/citylauncher"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="261dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:maxLines="1"
                android:text="City Launcher"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:src="@drawable/social2" />

        </android.support.v7.widget.CardView>

        <!-- Volunteer Teacher -->
        <android.support.v7.widget.CardView

            android:id="@+id/volunteerteacher"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="261dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:maxLines="1"
                android:text="Volunteer Teacher"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:src="@drawable/social6" />

        </android.support.v7.widget.CardView>

        <!-- Psychologist -->
        <android.support.v7.widget.CardView

            android:id="@+id/psychologist"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="261dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:maxLines="1"
                android:text="Trainee Psychologist"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:src="@drawable/social5" />

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>